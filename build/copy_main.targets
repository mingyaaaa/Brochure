<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <ItemGroup Condition="'$(Configuration)' == 'Release' ">
        <MySourceFiles Include="$(TargetDir)/**/*.*" Exclude="$(TargetDir)/**/*.pdb"/>
    </ItemGroup>
	<ItemGroup Condition="'$(Configuration)' == 'Debug' ">
        <MySourceFiles Include="$(TargetDir)/**/*.*"/>
    </ItemGroup>
 <Target Name="AfterBuildCopy" AfterTargets="Build">
     <Copy SourceFiles="@(MySourceFiles)" DestinationFiles="@(MySourceFiles->'$(ProjectDir)../../bin/%(RecursiveDir)%(Filename)%(Extension)')" ></Copy>
 </Target>
</Project>